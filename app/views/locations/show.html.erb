<% if user_signed_in? %>

    <%= link_to "編集", edit_location_path(@location.id), method: :get, class: "location-red-btn" %>
    <% if current_user.id == @location.user.id %>
    <p class="or-text">or</p>
    <%= link_to "1click削除", location_path(@location.id), data: { turbo_method: :delete }, class:"location-destroy" %>
  <% end %>

<% end %>

<%= @location.title%>

<div class="posted-content">
  <%= image_tag @location.images[0], class: "main-image" %><br>
  <div class="other-images">
    <% @location.images[1..-1].each do |image| %>
      <div class="other-image">
        <%= image_tag image %>
      </div>
    <%end%>
  </div>



<%= @location.estimated_time%>

<%= @location.meal_enter.name%>

<%= @location.min_cost%>

<%= @location.max_cost%>

<%= @location.description%>

<%= @location.address%>

<% if @location.phone_number.present? %>
   <%= @location.phone_number%>
<% else %>
  <p>公式ウェブサイトはありません。</p>
<% end %>

<% if @location.phone_number.present? && @location.travel_time.present? %>
  <%= "#{@location.nearest_station}駅から約#{@location.travel_time}分"%>
<% else %>
  <p>最寄り駅の情報はありません。</p>
<% end %>

<%= @location.business_hours%>

<% if @location.official_url.present? %>
  <h2>公式ウェブサイト</h2>
  <%= link_to @location.official_url, @location.official_url, target: "_blank" %>
<% else %>
  <p>公式ウェブサイトはありません。</p>
<% end %>

<%= @location.requires.name%>

